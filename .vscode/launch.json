    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "src/loader.py",
            "console": "integratedTerminal",
            "justMyCode": true
        },
        {
            "name": "Flask: Remote Attach",
            "type": "python",
            "request": "attach",
            "port": 3000,
            "host": "0.0.0.0",
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}",
                    "remoteRoot": "/usr/src/app",
                }
            ],
            "subProcess": true,
            "redirectOutput": false,
            "justMyCode": true,
        },
    ]
}